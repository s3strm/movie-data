{
  "AWSTemplateFormatVersion":"2010-09-09",
  "Description":"Bucket holding movie data",

  "Parameters": {
    "MovieBucketName": {
      "Description": "Bucket to store the processed movies",
      "Type": "String"
    }
  },

  "Resources": {
    "S3TopicPolicy": {
      "Type": "AWS::SNS::TopicPolicy",
      "Properties": {
        "PolicyDocument": {
          "Id": "S3TopicPolicy",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": { "Service": "s3.amazonaws.com" },
              "Action": [ "SNS:Publish" ],
              "Resource": "*"
            }
          ]
        },
        "Topics": [
          { "Ref": "VideoCreatedTopic" },
          { "Ref": "MetaCreatedTopic" }
        ]
      }
    },

    "VideoCreatedTopic": {
      "Type" : "AWS::SNS::Topic",
      "Properties" : {
        "DisplayName" : "VideoCreatedTopic"
      }
    },

    "MetaCreatedTopic": {
      "Type" : "AWS::SNS::Topic",
      "Properties" : {
        "DisplayName" : "MetaCreatedTopic"
      }
    },

    "MovieBucket": {
      "Type" : "AWS::S3::Bucket",
      "Properties" : {
        "AccessControl" : "Private",
        "BucketName" : { "Ref": "MovieBucketName" },
        "NotificationConfiguration": {
          "TopicConfigurations": [
            {
              "Topic": { "Ref": "VideoCreatedTopic" },
              "Event": "s3:ObjectCreated:*",
              "Filter": {
                "S3Key": {
                  "Rules" : [
                    { "Name": "suffix", "Value": "/video.mp4" }
                  ]
                }
              }
            },
            {
              "Topic": { "Ref": "MetaCreatedTopic" },
              "Event": "s3:ObjectCreated:*",
              "Filter": {
                "S3Key": {
                  "Rules" : [
                    { "Name": "suffix", "Value": "/metadata.txt" }
                  ]
                }
              }
            }
          ]
        }
      },
      "DependsOn": [ "S3TopicPolicy" ]
    }
  },

  "Outputs": {
    "VideoCreatedTopic": {
      "Value": { "Ref": "VideoCreatedTopic" },
      "Export": { "Name": "s3strm-video-created-topic" }
    },

    "MetaCreatedTopic": {
      "Value": { "Ref": "MetaCreatedTopic" },
      "Export": { "Name": "s3strm-meta-created-topic" }
    }
  }
}
