{
  "AWSTemplateFormatVersion":"2010-09-09",
  "Description":"Bucket holding movie data",

  "Parameters": {
    "MovieBucketName": {
      "Description": "Bucket to store the processed movies",
      "Type": "String"
    },

    "IncomingBucketName": {
      "Description": "Bucket to store the unprocessed movies",
      "Type": "String"
    },

    "PostersLambdaArn": {
      "Description": "Bucket to store the unprocessed movies",
      "Type": "String"
    }
  },

  "Resources": {
    "S3TopicPolicy": {
      "Type": "AWS::SNS::TopicPolicy",
      "Properties": {
        "PolicyDocument": {
          "Id": "S3TopicPolicy",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": { "Service": "s3.amazonaws.com" },
              "Action": [ "SNS:Publish" ],
              "Resource": "*"
            }
          ]
        },
        "Topics": [
          { "Ref": "IncomingMp4Topic" },
          { "Ref": "CreatedTopic" }
        ]
      }
    },

    "IncomingMp4Topic": {
      "Type" : "AWS::SNS::Topic",
      "Properties" : {
        "DisplayName" : "DataIncomingMp4Topic"
      }
    },

    "CreatedTopic": {
      "Type" : "AWS::SNS::Topic",
      "Properties" : {
        "DisplayName" : "DataCreatedTopic",
        "Subscription": [
          {
            "Endpoint": { "Ref": "PostersLambdaArn" },
            "Protocol": "lambda"
          }
        ]
      }
    },

    "IncomingBucket": {
      "Type" : "AWS::S3::Bucket",
      "Properties" : {
        "AccessControl" : "Private",
        "BucketName" : { "Ref": "IncomingBucketName" },
        "NotificationConfiguration": {
          "TopicConfigurations": [
            {
              "Topic": { "Ref": "IncomingMp4Topic" },
              "Event": "s3:ObjectCreated:*",
              "Filter": {
                "S3Key": {
                  "Rules" : [
                    { "Name": "suffix", "Value": ".mp4" }
                  ]
                }
              }
            }
          ]
        }
      },
      "DependsOn": [ "S3TopicPolicy" ]
    },

    "MovieBucket": {
      "Type" : "AWS::S3::Bucket",
      "Properties" : {
        "AccessControl" : "Private",
        "BucketName" : { "Ref": "MovieBucketName" },
        "NotificationConfiguration": {
          "TopicConfigurations": [
            {
              "Topic": { "Ref": "CreatedTopic" },
              "Event": "s3:ObjectCreated:*",
              "Filter": {
                "S3Key": {
                  "Rules" : [
                    { "Name": "suffix", "Value": "/video.mp4" }
                  ]
                }
              }
            }
          ]
        }
      },
      "DependsOn": [ "S3TopicPolicy" ]
    }
  },

  "Outputs": {
    "MovieBucket": {
      "Value": { "Ref": "MovieBucketName" }
    },

    "IncomingBucket": {
      "Value": { "Ref": "IncomingBucketName" }
    },

    "IncomingMp4Topic": {
      "Value": { "Ref": "IncomingMp4Topic" }
    },

    "CreatedTopic": {
      "Value": { "Ref": "CreatedTopic" }
    }
  }
}
