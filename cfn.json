{
  "AWSTemplateFormatVersion":"2010-09-09",
  "Description":"Bucket holding movie data",

  "Parameters": {
    "MovieBucketName": {
      "Description": "Bucket to store the processed movies",
      "Type": "String"
    },

    "PostersLambdaArn": {
      "Description": "The posters lambda function to subscribe to events",
      "Type": "String"
    },

    "StrmLambdaArn": {
      "Description": "The strm lambda function to subscribe to events",
      "Type": "String"
    },

    "OmdbLambdaArn": {
      "Description": "The strm lambda function to subscribe to events",
      "Type": "String"
    },

    "Mp4MetaKickstarterLambdaArn": {
      "Description": "The Mp4Meta Kickstarter lambda function to subscribe to events",
      "Type": "String"
    }
  },

  "Resources": {
    "S3TopicPolicy": {
      "Type": "AWS::SNS::TopicPolicy",
      "Properties": {
        "PolicyDocument": {
          "Id": "S3TopicPolicy",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": { "Service": "s3.amazonaws.com" },
              "Action": [ "SNS:Publish" ],
              "Resource": "*"
            }
          ]
        },
        "Topics": [
          { "Ref": "Mp4CreatedTopic" },
          { "Ref": "MetaCreatedTopic" }
        ]
      }
    },

    "Mp4CreatedTopic": {
      "Type" : "AWS::SNS::Topic",
      "Properties" : {
        "DisplayName" : "Mp4CreatedTopic",
        "Subscription": [
          {
            "Endpoint": { "Ref": "PostersLambdaArn" },
            "Protocol": "lambda"
          },
          {
            "Endpoint": { "Ref": "StrmLambdaArn" },
            "Protocol": "lambda"
          },
          {
            "Endpoint": { "Ref": "OmdbLambdaArn" },
            "Protocol": "lambda"
          },
          {
            "Endpoint": { "Ref": "Mp4MetaKickstarterLambdaArn" },
            "Protocol": "lambda"
          }
        ]
      }
    },

    "MetaCreatedTopic": {
      "Type" : "AWS::SNS::Topic",
      "Properties" : {
        "DisplayName" : "MetaCreatedTopic",
        "Subscription": []
      }
    },

    "MovieBucket": {
      "Type" : "AWS::S3::Bucket",
      "Properties" : {
        "AccessControl" : "Private",
        "BucketName" : { "Ref": "MovieBucketName" },
        "NotificationConfiguration": {
          "TopicConfigurations": [
            {
              "Topic": { "Ref": "Mp4CreatedTopic" },
              "Event": "s3:ObjectCreated:*",
              "Filter": {
                "S3Key": {
                  "Rules" : [
                    { "Name": "suffix", "Value": "/video.mp4" }
                  ]
                }
              }
            },
            {
              "Topic": { "Ref": "MetaCreatedTopic" },
              "Event": "s3:ObjectCreated:*",
              "Filter": {
                "S3Key": {
                  "Rules" : [
                    { "Name": "suffix", "Value": "/metadata.txt" }
                  ]
                }
              }
            }
          ]
        }
      },
      "DependsOn": [ "S3TopicPolicy" ]
    }
  },

  "Outputs": {
    "MovieBucket": {
      "Value": { "Ref": "MovieBucketName" }
    },

    "Mp4CreatedTopic": {
      "Value": { "Ref": "Mp4CreatedTopic" }
    },

    "MetaCreatedTopic": {
      "Value": { "Ref": "MetaCreatedTopic" }
    }
  }
}
