{
  "AWSTemplateFormatVersion":"2010-09-09",
  "Description":"Bucket holding movie data",

  "Parameters": {
    "BucketName": {
      "Description": "The bucket for storing the posters",
      "Type": "String"
    }
  },

  "Resources": {
    "S3TopicPolicy": {
      "Type": "AWS::SNS::TopicPolicy",
      "Properties": {
        "PolicyDocument": {
          "Id": "S3TopicPolicy",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": { "Service": "s3.amazonaws.com" },
              "Action": [ "SNS:Publish" ],
              "Resource": "*"
            }
          ]
        },
        "Topics": [
          { "Ref": "CreatedTopic" },
          { "Ref": "RemovedTopic" }
        ]
      }
    },

    "S3SqsPolicy": {
      "Type": "AWS::SQS::QueuePolicy",
      "Properties": {
        "PolicyDocument": {
          "Id": "S3SqsPolicy",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": { "Service": "s3.amazonaws.com" },
              "Action": [ "SQS:SendMessage", "SNS:Publish" ],
              "Resource": "*"
            }
          ]
        },
        "Queues": [
          { "Ref": "IncomingSqs" }
        ]
      }
    },

    "IncomingSqs": {
      "Type": "AWS::SQS::Queue",
      "Properties": {
        "DelaySeconds": 0,
        "VisibilityTimeout": "600"
      }
    },

    "CreatedTopic": {
      "Type" : "AWS::SNS::Topic",
      "Properties" : {
        "DisplayName" : "DataCreatedTopic"
      }
    },

    "RemovedTopic": {
      "Type" : "AWS::SNS::Topic",
      "Properties" : {
        "DisplayName" : "DataRemovedTopic"
      }
    },

    "Bucket": {
      "Type" : "AWS::S3::Bucket",
      "Properties" : {
        "AccessControl" : "Private",
        "BucketName" : { "Ref": "BucketName" },
        "NotificationConfiguration": {
          "QueueConfigurations": [
            {
              "Queue": { "Fn::GetAtt": [ "IncomingSqs", "Arn"] },
              "Event": "s3:ObjectCreated:*",
              "Filter": {
                "S3Key": {
                  "Rules" : [
                    { "Name": "prefix", "Value": "incoming/" }
                  ]
                }
              }
            }
          ],
          "TopicConfigurations": [
            {
              "Topic": { "Ref": "CreatedTopic" },
              "Event": "s3:ObjectCreated:*",
              "Filter": {
                "S3Key": {
                  "Rules" : [
                    { "Name": "prefix", "Value": "processed" }
                  ]
                }
              }
            },
            {
              "Topic": { "Ref": "RemovedTopic" },
              "Event": "s3:ObjectRemoved:*",
              "Filter": {
                "S3Key": {
                  "Rules" : [
                    { "Name": "prefix", "Value": "processed/" }
                  ]
                }
              }
            }
          ]
        }
      },
      "DependsOn": [ "S3TopicPolicy", "S3SqsPolicy" ]
    }
  },

  "Outputs": {
    "Bucket": {
      "Value": { "Ref": "Bucket" }
    },

    "IncomingSqsArn": {
      "Value": { "Fn::GetAtt": [ "IncomingSqs", "Arn" ] }
    },

    "CreatedTopic": {
      "Value": { "Ref": "CreatedTopic" }
    },

    "RemovedTopic": {
      "Value": { "Ref": "RemovedTopic" }
    }
  }
}
